<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tamir.client">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-feature android:name="android.hardware.Camera2" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pclub_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pclub_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="oldproject.client.Log"/>
        <activity android:name="oldproject.client.JoinRoom" />
        <activity android:name="oldproject.client.ChangeLog" />

        <activity android:name="oldproject.client.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="oldproject.client.Boom"
            android:label="@string/title_activity_boom" />
        <activity
            android:name="oldproject.client.Settings"
            android:label="@string/title_activity_settings" />

        <provider
            android:authorities="com.google.android.provider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

    </application>

</manifest>